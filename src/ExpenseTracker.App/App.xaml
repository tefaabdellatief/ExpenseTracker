<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="ExpenseTracker.App.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!--  Palette  -->
            <Color x:Key="Primary">#2D3E50</Color>
            <Color x:Key="Accent1">#F4A261</Color>
            <Color x:Key="Accent2">#2A9D8F</Color>
            <Color x:Key="Accent3">#64B5F6</Color>
            <Color x:Key="Accent4">#E76F51</Color>
            <Color x:Key="Background">#FFFFFF</Color>
            <Color x:Key="Surface">#F8F9FA</Color>
            <Color x:Key="Divider">#E0E0E0</Color>

            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource Primary}" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Padding" Value="12,8" />
                <Setter Property="BackgroundColor" Value="{StaticResource Accent1}" />
                <Setter Property="TextColor" Value="White" />
            </Style>

            <Style x:Key="ValidationEntry" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="White" />
            </Style>

            <Style
                x:Key="InvalidEntry"
                BasedOn="{StaticResource ValidationEntry}"
                TargetType="Entry">
                <Setter Property="BackgroundColor" Value="#FFF0F0" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
