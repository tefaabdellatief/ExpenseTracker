<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="ExpenseTracker.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ExpenseTracker.App.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarHasShadow="False"
    Shell.NavBarIsVisible="False"
    Shell.PresentationMode="ModalAnimated"
    Shell.TabBarDisabledColor="{StaticResource Gray400}"
    Shell.TabBarUnselectedColor="{StaticResource Gray400}">

    <!--  Login Page (No TabBar)  -->
    <ShellContent
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login"
        Shell.FlyoutBehavior="Disabled" />

    <!--  Main App (With TabBar)  -->
    <TabBar Route="main">

        <Tab Title="Expenses" Icon="homeicon">
            <ShellContent Title="Expenses" ContentTemplate="{DataTemplate views:ExpenseListPage}" />
        </Tab>
        <Tab Title="Dashboard" Icon="receipt">
            <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate views:DashboardPage}" />
        </Tab>
        <Tab Title="Settings" Icon="settingsicon">
            <ShellContent Title="Settings" ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>